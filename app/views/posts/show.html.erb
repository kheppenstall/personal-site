<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2> <%= @post.title %> </h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class = "blog-post">
        <%= render @post.partial %>
        
      </div>
    </div>

    <div class="col-md-4">
      <div class="blog-index">
        <h4>All Posts</h4>
        <% @posts.each do |post| %>
          <%= link_to post.title, post_path(post) %><br>
        <% end %>        
      </div>
    </div>

  </div>
</div>